<Window x:Class="EasyLifeAppDesktop.HousesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyLifeAppDesktop"
        mc:Ignorable="d" Height="450" Width="800" WindowState="Maximized" Title="Houses">
    <Grid Opacity="0.8">
        <Grid.Background>
            <ImageBrush ImageSource="Files/houses.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>
        <ListBox HorizontalAlignment="Left" Height="246" Name="housesList" Margin="27,25,0,0" BorderThickness="0" VerticalAlignment="Top" Width="255" Background="#803D4547" FontSize="36" FontWeight="Bold" Foreground="White"/>

    </Grid>
</Window>
